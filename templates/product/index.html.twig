{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Boutique Française
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-3">
			<h2>Filtrer</h2>
			{{ form(form) }}
			</div>
			<div class="col-md-9">
				<h1>Nos produits</h1>

				<div class="row">
					{% for product in app_product %}
						<div class="col-md-4">
							<div class="product-item text-center">
								<a href="{{ path('app_one_product', { 'slug' : product.slug }) }}">
									<img src="/uploads/files/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
								</a>
								<h2>{{ product.name }}</h2>
								<span>{{ product.subtitle }}</span>
								<span class="price">{{ (product.price / 100)|number_format(2, ',', '.')}}€</span>
							</div>
						</div>
					{% endfor %}

				</div>
			</div>
		</div>

	{% endblock %}
