{% extends 'base.html.twig' %}

{% block title %}Se connecter - La boutique Française
{% endblock %}

{% block content %}
	<div class="small-block">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Veuillez entrer votre email">
			<label for="inputPassword" class="mt-3">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Veuillez entrer votre mot de passe">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary btn-sm my-5" type="submit">
				Se connecter
			</button>
			<hr>
			<p>Ou souhaitez-vous
				<a href="{{ path('register') }}">créer un compte</a>
			</p>
		</form>
		<div>
		{% endblock %}
